<div id="toast"></div>

<script>
  const $=s=>document.querySelector(s);
  const $$=s=>document.querySelectorAll(s);
  const dots=$$('#dots .dot');
  let step=1;
  const state={name:"Oakley",palette:"gold",play:60,talk:55,depth:65,tone:"Warm",anchors:"ü™¢"};
  const ring=$('#ring'), yourRing=$('#yourRing');

  // Year
  $('#yr').textContent=new Date().getFullYear();

  // Palette ‚Üí ring color
  function applyRing(el, pal){
    const map={
      gold:'#f3e19a', purple:'#d8ccff', green:'#cfead8', blue:'#cfe1ff'
    };
    el.style.borderColor = map[pal] || '#e9e7ff';
  }

  function next(){
    if(step<6) step++;
    updateSteps();
  }
  function show(n, show){ $('#step'+n).hidden = !show; }
  function updateSteps(){
    dots.forEach((d,i)=>d.classList.toggle('on', i<step));
    for(let i=1;i<=6;i++) show(i, i===step);
    // Pull latest inputs into state
    state.name = $('#name').value || state.name;
    state.palette = $('#palette').value;
    state.play = +$('#play').value;
    state.talk = +$('#talk').value;
    state.depth = +$('#depth').value;
    state.tone = $('#tone').value;
    state.anchors = $('#anchors').value || state.anchors;
    applyRing(ring, state.palette);
    $('#summary').textContent =
      `${state.name} ¬∑ ${state.tone} tone ¬∑ Playful ${state.play} / Talkative ${state.talk} / Deep ${state.depth}.
Anchors: ${state.anchors}`;
  }
  function saveProfile(){
    localStorage.setItem('sidekickProfile', JSON.stringify(state));
    applyRing(yourRing, state.palette);
    $('#yourText').textContent = `${state.name} saved. Tone: ${state.tone}. Anchors: ${state.anchors}`;
    toast('Saved!');
    location.hash = '#your';
  }
  function restore(){
    const raw = localStorage.getItem('sidekickProfile');
    if(!raw) return;
    const p = JSON.parse(raw);
    Object.assign(state,p);
    $('#name').value = p.name||'';
    $('#palette').value = p.palette||'gold';
    $('#play').value = p.play||60;
    $('#talk').value = p.talk||55;
    $('#depth').value = p.depth||65;
    $('#tone').value = p.tone||'Warm';
    $('#anchors').value = p.anchors||'ü™¢';
    applyRing(yourRing, p.palette||'gold');
    $('#yourText').textContent = `${p.name} ready. Tone: ${p.tone}. Anchors: ${p.anchors||'ü™¢'}`;
  }
  function restart(){
    step=1;
    $('#name').value=''; $('#anchors').value='';
    updateSteps();
  }

  // Spark copy
  function copySeed(){
    const t = $('#seed').innerText.trim();
    navigator.clipboard.writeText(t).then(()=>toast('Handshake copied. Open ChatGPT and paste.'));
  }

  // Toast
  let tmr; function toast(msg){ const t=$('#toast'); t.textContent=msg; t.style.opacity=1; clearTimeout(tmr); tmr=setTimeout(()=>t.style.opacity=0,2200); }

  // Init
  updateSteps(); restore();
  // Ensure ChatGPT links open in new tab (safety)
  document.querySelectorAll('a[href^="https://chat.openai.com"]').forEach(a=>{a.target='_blank';a.rel='noopener noreferrer';});
</script>
</body>
