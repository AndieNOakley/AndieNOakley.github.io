<script>
  // Simple 4-4-6 breathing loop
  const overlay = document.getElementById('overlay');
  const step = document.getElementById('step');
  document.getElementById('breatheBtn').onclick = () => {
    overlay.classList.add('show');
    startCycle();
  };
  document.getElementById('close').onclick = () => {
    overlay.classList.remove('show');
    clearInterval(timer);
  };

  let timer, phase = 0, count = 0;
  const phases = [
    {label:'Inhaleâ€¦', secs:4},
    {label:'Holdâ€¦',   secs:4},
    {label:'Exhaleâ€¦', secs:6}
  ];
  function startCycle(){
    phase = 0; count = phases[0].secs;
    updateText();
    timer = setInterval(tick, 1000);
  }
  function tick(){
    count--;
    if (count <= 0){
      phase = (phase + 1) % phases.length;
      count = phases[phase].secs;
    }
    updateText();
  }
  function updateText(){
    step.textContent = `${phases[phase].label} ${count}`;
  }
</script>
